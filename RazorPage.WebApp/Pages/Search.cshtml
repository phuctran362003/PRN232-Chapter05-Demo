@page
@model RazorPage.WebApp.Pages.SearchModel
@{
    ViewData["Title"] = "Search Paintings";
}

<div class="container">
    <h1 class="mt-4 mb-4">Search Watercolors Paintings</h1>
    
    <div class="mb-3">
        <a asp-page="Index" class="btn btn-secondary">Back to List</a>
    </div>
    
    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger">@Model.ErrorMessage</div>
    }
    
    <div class="row mb-4">
        <div class="col-md-8">
            <form method="get">
                <div class="row g-3">
                    <div class="col-md-5">
                        <label for="author" class="form-label">Author</label>
                        <input type="text" class="form-control" id="author" name="author" value="@Model.Author">
                    </div>
                    <div class="col-md-4">
                        <label for="date" class="form-label">Published Year</label>
                        <input type="number" class="form-control" id="date" name="date" value="@Model.Date">
                    </div>
                    <div class="col-md-3 d-flex align-items-end">
                        <button type="submit" class="btn btn-primary w-100">Search</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
    
    @if (Model.Paintings.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Author</th>
                        <th>Price</th>
                        <th>Year</th>
                        <th>Style</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var painting in Model.Paintings)
                    {
                        <tr>
                            <td>@painting.PaintingId</td>
                            <td>@painting.PaintingName</td>
                            <td>@painting.PaintingAuthor</td>
                            <td>@(painting.Price?.ToString("N0") ?? "N/A")</td>
                            <td>@(painting.PublishYear ?? 0)</td>
                            <td>@(painting.StyleName ?? painting.Style?.StyleName ?? painting.StyleId)</td>
                            <td>
                                <a asp-page="Details" asp-route-id="@painting.PaintingId" class="btn btn-info btn-sm">Details</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else if (Model.SearchPerformed)
    {
        <div class="alert alert-info">No paintings found matching your search criteria.</div>
    }
</div>