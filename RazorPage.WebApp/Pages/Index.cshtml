@page
@model IndexModel
@{
    ViewData["Title"] = "Watercolors Paintings";
}

<div class="container">
    <h1 class="mt-4 mb-4">Watercolors Paintings</h1>
    
    <div class="mb-3">
        <a asp-page="Create" class="btn btn-primary">Create New</a>
        <a asp-page="Search" class="btn btn-secondary ms-2">Search</a>
    </div>
    
    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="alert alert-success">@Model.SuccessMessage</div>
    }
    
    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger">@Model.ErrorMessage</div>
    }
    
    @if (Model.Paintings.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Author</th>
                        <th>Price</th>
                        <th>Year</th>
                        <th>Style</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var painting in Model.Paintings)
                    {
                        <tr>
                            <td>@painting.PaintingId</td>
                            <td>@painting.PaintingName</td>
                            <td>@painting.PaintingAuthor</td>
                            <td>@(painting.Price?.ToString("N0") ?? "N/A")</td>
                            <td>@(painting.PublishYear ?? 0)</td>
                            <td>@(painting.StyleName ?? painting.Style?.StyleName ?? painting.StyleId)</td>
                            <td>
                                <a asp-page="Details" asp-route-id="@painting.PaintingId" class="btn btn-info btn-sm">Details</a>
                                <a href="#" class="btn btn-danger btn-sm" 
                                   onclick="confirmDelete('@painting.PaintingId', '@painting.PaintingName')">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info">No paintings found.</div>
    }
</div>

<form id="deleteForm" method="post" asp-page-handler="Delete">
    <input type="hidden" id="paintingIdToDelete" name="id" />
</form>

@section Scripts {
    <script>
        function confirmDelete(id, name) {
            if (confirm(`Are you sure you want to delete "${name}"?`)) {
                document.getElementById('paintingIdToDelete').value = id;
                document.getElementById('deleteForm').submit();
            }
        }
    </script>
}